    margin-right: 2px;
}

.form {
    color: #C8C822; /* 文本颜色为浅黄色 */
}

/* 弹性布局容器 */

.flex {
    display: flex;
}

/* 圆点的样式 */

.dot {
    height: 13px;
    width: 13px;
    border-radius: 50%;
    margin-left: 5px;
    margin-top: 5px;
}

/* 顶部按钮的背景颜色 */

#top .button {
    background-color: #BDB76B; /* 背景颜色为深卡其色 */
}

/* 数字按钮的背景颜色 */

#num .button {
    background-color: #B8860B; /* 背景颜色为深金色 */
}

/* 右侧按钮的背景颜色 */

aside-right .button {
    background-color: #DAA520; /* 背景颜色为金色 */
}

/* 主要布局容器 */

